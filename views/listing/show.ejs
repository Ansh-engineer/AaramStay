<% layout("layouts/boilerplate") %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-3">
      <h3><b><%= listing.title %></b></h3>
    </div>
    <div class="card col-6 offset-3 show-card listing-cards">
      <img
        src="<%=listing.image.url%>"
        class="card-img-top show-img"
        alt="listing_image"
      />
      <div class="card-body">
        <p class="card-text">
          <%= listing.description %> <br />
          &#8377; <%= listing.price.toLocaleString("en-IN") %> <br />
          <%= listing.location %> <br />
          <%= listing.country %> <br />
        </p>
      </div>
    </div>
    <br />

    <div class="btns">
      <a
        href="/listing/<%=listing._id%>/edit"
        class="btn btn-dark col-1 offset-3 btn-edit"
        >Edit</a
      >

      <form method="POST" action="/listing/<%=listing._id%>?_method=DELETE">
        <button class="btn btn-dark offset-5">Delete</button>
      </form>
    </div>

    <div class="col-8 offset-3 mt-3">
      <hr />
      <h4>Leave a review</h4>

      <form
        method="post"
        action="/listing/<%= listing.id%>/review"
        novalidate
        class="needs-validation"
      >
        <div class="mt-3">
          <label for="rating" class="form-label">Rating</label>
          <input
            type="range"
            min="1"
            max="5"
            id="rating"
            name="review[rating]"
            class="form-range"
          />
        </div>
        <div class="mt-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea
            rows="5"
            cols="30"
            id="comment"
            name="review[comment]"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">
            Please enter some comments for review
          </div>
        </div>
        <button class="btn btn-outline-dark mt-3 mb-3">Submit</button>
      </form>
      <hr />
      <p><b>All Reviews</b></p>
      <div class="row">
      <% for(let review of listing.reviews){ %>
      <div class="card col-5 ms-3 mb-3">
        <div class="card-body">
          <h5 class="card-title">Jane Joe</h5>
          <p class="card-text"><%=review.comment %></p>
          <p class="card-text"><%=review.rating %> stars</p>
        </div><br>
        <form class="mb-3" method="post" action="/listing/<%= listing._id%>/review/<%=review._id %>?_method=DELETE">
          <button class="btn btn-dark btn-sm">Delete</button>
        </form>
      </div>

      <% } %>
      </div>
    </div>
  </div>
</body>
